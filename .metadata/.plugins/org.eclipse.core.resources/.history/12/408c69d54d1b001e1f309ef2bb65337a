package day2Program;

import java.util.Arrays;

public class SortingArrayInbuildMethod {

	public static void main(String[] args) {

		int[] var = { 2, 3, 10,4, 3, 6, 1, 8 };
      
		Arrays.sort(var);
		
		System.out.println(Arrays.toString(var).charAt(var.length));
         int max=0;
         System.out.println("sorting the element: ");
		for (int i = 0; i < var.length; i++) {
			System.out.println(var[i]);
           if(i==var.length-1) {
        	    max += var[i];
        	    
           }
		}
		System.out.println("Maximum of array is :"+max);
	}
}
