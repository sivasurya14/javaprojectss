package day4Program;

public class PalindromeExample {

	public static String checkPalin(String val) {

		String revers = "";
		for (int i = val.length() - 1; i >= 0; i--) {
			revers = revers + val.charAt(i);
		}
		if (val.toLowerCase().equalsIgnoreCase(revers)) {
			return val + " is Palindrome";
		} else {
			return val + " is not palidrome";
		}
	}

	public static void main(String[] args) {

		System.out.println(checkPalin("raar"));
	}

}
